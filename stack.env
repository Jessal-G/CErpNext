##############################################
# ERPNext / Frappe Docker Environment File
# Reference: https://github.com/frappe/frappe_docker/blob/main/docs/environment-variables.md
##############################################

# ERPNext version to use
ERPNEXT_VERSION=v15.85.1

##############################################
# Database Configuration
##############################################

# MariaDB root password (keep this secure!)
DB_PASSWORD=123

# Only if you use docker secrets for DB password
DB_PASSWORD_SECRETS_FILE=

# External Database (if applicable)
DB_HOST=
DB_PORT=

##############################################
# Redis Configuration (optional if using external Redis)
##############################################
REDIS_CACHE=
REDIS_QUEUE=

##############################################
# SSL / HTTPS Configuration
##############################################

# Email used for Let's Encrypt certificate generation
LETSENCRYPT_EMAIL=mail@example.com

# List of sites for Let's Encrypt certificates
SITES=`erp.example.com`

##############################################
# Optional Variables
##############################################

# If your site name differs from hostname, specify it here
FRAPPE_SITE_NAME_HEADER=

# Port exposed to host (default: 8080)
HTTP_PUBLISH_PORT=8080

# Trusted upstream IP address (default: 127.0.0.1)
UPSTREAM_REAL_IP_ADDRESS=185.198.27.204

# Header used to replace client IP (default: X-Forwarded-For)
UPSTREAM_REAL_IP_HEADER=X-Forwarded-For

# Allowed values: on | off (default: off)
UPSTREAM_REAL_IP_RECURSIVE=off

# Timeout for slow sites or long-running print jobs (default: 120s)
PROXY_READ_TIMEOUT=120s

# Max upload size (default: 50m)
CLIENT_MAX_BODY_SIZE=50m
